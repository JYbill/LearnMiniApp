page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.father {
  width: 400rpx;
  height: 400rpx;
  background-color: skyblue;
  box-sizing: border-box;
}
.father-hover {
  background-color: orange;
}
.son{
  width: 200rpx;
  height: 200rpx;
  background-color: pink;
}
.son-hover {
  background-color: red;
}

input {
  border: 1px solid orangered;
  width: 80vw;
  margin: 0 auto;
}

.scroll {
  height: 600rpx;
  background-color: skyblue;
  padding: 0 20rpx;
}

.item {
  height: 100rpx;
  margin: 10rpx 0;
  background-color: tan;
}